#!/usr/bin/env bash

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing USD"

echo "test" | indent

python USD/build_scripts/build_usd.py $1/USD --build-args USD,"PXR_ENABLE_GL_SUPPORT=FALSE PXR_BUILD_IMAGING=FALSE PXR_ENABLE_PTEX_SUPPORT=FALSE XR_BUILD_USD_IMAGING=FALSE PXR_BUILD_USDVIEW=FALSE" --no-usdview | indent

echo "DONE" | indent