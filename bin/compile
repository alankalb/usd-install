#!/usr/bin/env bash

indent() {
  sed -u 's/^/       /'
}

echo "-----> Installing USD"

python $1/USD/build_scripts/build_usd.py $1/USD-build --build-args USD,"-DPXR_LIB_PREFIX=pxr PXR_ENABLE_GL_SUPPORT=FALSE PXR_BUILD_IMAGING=FALSE PXR_ENABLE_PTEX_SUPPORT=FALSE XR_BUILD_USD_IMAGING=FALSE PXR_BUILD_USDVIEW=FALSE" --no-imaging --no-examples --no-tutorials --no-usdview --no-python | indent

echo "DONE"